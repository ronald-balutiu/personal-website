---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Your Name | Senior Software Engineer">
  <section class="hero">
    <div class="hero-content">
      <h1>Your Name</h1>
      <p class="tagline">
        Senior Software Engineer focusing on design processes, shipping meaningful work, and making
        people's lives better along the way.
      </p>
      <div class="scroll-indicator">
        <span class="arrow">â†“</span>
        <span class="text">Scroll to explore</span>
      </div>
    </div>
  </section>

  <section id="projects" class="projects">
    <h2>Projects</h2>
    <div class="project-grid">
      <a href="/project1" class="project-card">
        <div class="project-content">
          <div class="logo">
            <svg
