---
import Layout from '../layouts/Layout.astro'
import { getCollection } from 'astro:content'
import { PROJECT_DETAIL_PAGES_ENABLED } from '../config/features'
import { siteConfig } from '../config/site'

export async function getStaticPaths() {
  if (!PROJECT_DETAIL_PAGES_ENABLED) {
    return []
  }

  const projects = await getCollection('projects')

  return projects.map((project) => ({
    params: { project: project.slug },
    props: { project, slug: project.slug },
  }))
}

const { project, slug } = Astro.props
const routeSlug = slug ?? project.slug
const { title, description, details, link, seoTitle, seoDescription, ogImage, ogImageAlt } =
  project.data
const pageTitle = seoTitle ?? title
const pageDescription = seoDescription ?? description
const projectJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareSourceCode',
  name: title,
  description: pageDescription,
  url: `${siteConfig.siteUrl}/${routeSlug}`,
  codeRepository: link,
  author: {
    '@type': 'Person',
    name: 'Ronald Balutiu',
    url: siteConfig.siteUrl,
  },
}
---

<Layout
  seo={{
    pageType: 'project',
    path: `/${routeSlug}`,
    title: pageTitle,
    description: pageDescription,
    ogType: 'article',
    ogImage,
    ogImageAlt: ogImageAlt ?? `${title} project preview`,
    jsonLd: [projectJsonLd],
  }}
>
  <div class="project-container">
    <div class="project-content">
      <h1>{title}</h1>
      <p class="description">{description}</p>
      <div class="details">
        {details}
      </div>
      <a href={link} class="project-link" target="_blank" rel="noopener noreferrer">
        View Project
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
          <polyline points="15 3 21 3 21 9"></polyline>
          <line x1="10" y1="14" x2="21" y2="3"></line>
        </svg>
      </a>
    </div>
  </div>
</Layout>

<style>
  .project-container {
    min-height: 100vh;
    padding: 6rem 2rem 4rem;
    background-color: var(--background);
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

  .project-content {
    max-width: 800px;
    background: var(--background);
    padding: 3rem;
    border-radius: 1.5rem;
    border: 1px solid var(--border-subtle);
    box-shadow: 0 16px 40px var(--shadow-ink-soft);
  }

  h1 {
    font-size: var(--font-size-page-title);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    margin: 0 0 1.5rem;
    color: var(--text);
    letter-spacing: var(--letter-spacing-tight);
  }

  .description {
    font-size: var(--font-size-heading-sm);
    font-weight: var(--font-weight-regular);
    line-height: var(--line-height-normal);
    color: var(--gray-500);
    margin-bottom: 2rem;
  }

  .details {
    font-size: var(--font-size-body-md);
    line-height: var(--line-height-comfy);
    font-weight: var(--font-weight-regular);
    color: var(--text);
    margin-bottom: 2rem;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background-color: var(--action-primary-bg);
    color: var(--action-primary-text);
    text-decoration: none;
    border-radius: 0.375rem;
    font-weight: var(--font-weight-medium);
    transition: all 0.2s;
  }

  .project-link:hover {
    background-color: var(--action-primary-bg-hover);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .project-container {
      padding: 4rem 1rem;
    }

    .project-content {
      padding: 2rem;
    }

    h1 {
      font-size: var(--font-size-page-title-mobile);
    }
  }
</style>
