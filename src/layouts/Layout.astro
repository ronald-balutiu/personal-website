---
import '../styles/global.css'
import SEO from '../components/SEO.astro'
import { buildSeo, type SeoInput } from '../lib/seo'

interface Props {
  seo: SeoInput
  balancedRails?: boolean
}

const { seo, balancedRails = false } = Astro.props
const resolvedSeo = buildSeo(seo)
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <SEO seo={resolvedSeo} />
    <link rel="icon" type="image/svg+xml" href="/assets/laptop.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Coustard:wght@400;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    {
      balancedRails ? (
        <main class="page-shell">
          <aside class="page-rail page-rail-left">
            <slot name="left-rail" />
          </aside>
          <div class="page-content">
            <slot />
          </div>
          <aside class="page-rail page-rail-right" aria-hidden="true">
            <slot name="right-rail" />
          </aside>
        </main>
      ) : (
        <main>
          <slot />
        </main>
      )
    }
    <footer class="site-footer">
      <p class="site-footer-text">Â© 2026 Ronald Balutiu. All rights reserved.</p>
    </footer>
  </body>
</html>
